{
  "expo": {
    "name": "mflix-expo",
    "slug": "mflix-expo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "mflix",
    "androidStatusBar": {
      "backgroundColor": "#25292e",
      "barStyle": "light-content",
      "translucent": false
    },
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mflix.app",
      "associatedDomains": [
        "applinks:mflix.app"
      ],
      "appleTeamId": "E3FRN9JNGJ"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.mflix.app",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "mflix",
              "host": "*.mflix.app",
              "pathPrefix": "/"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "@dittolive/ditto",
        {
          "bluetoothUsageDescription": "This app uses Bluetooth to connect to a Ditto device.",
          "localNetworkUsageDescription": "This app uses location services to connect to a Ditto device."
        }
      ]
    ]
  }
}
